<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_eth_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text="有线网口测试"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_eth1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="左网口"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_eth2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="右网口"
            android:textSize="25sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_eth3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="右上网口"
            android:textSize="25sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_eth4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="右下网口"
            android:textSize="25sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_eth1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="左网口"
            android:textSize="25sp" />

        <Button
            android:id="@+id/bt_eth2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="右网口"
            android:textSize="25sp" />

        <Button
            android:visibility="gone"
            android:id="@+id/bt_eth3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="右上网口"
            android:textSize="25sp" />

        <Button
            android:visibility="gone"
            android:id="@+id/bt_eth4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="右下网口"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:orientation="horizontal">

        <Button
            android:visibility="invisible"
            android:id="@+id/bt_fengshan_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/selector_press_to_pass"
            android:padding="5dp"
            android:text="通过"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:visibility="invisible"
            android:id="@+id/bt_fengshan_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/selector_press_to_fail"
            android:padding="5dp"
            android:text="失败"
            android:textColor="#ffffff"
            android:textSize="40sp" />

    </LinearLayout>


</LinearLayout>
